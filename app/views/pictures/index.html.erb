<p id="notice"><%= notice %></p>

<h1>Welcome</h1>

<p>Please <%= link_to 'add a picture', new_picture_path %></p>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Month</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.photographer.capitalize %></td>
        <td><%= Date::MONTHNAMES[picture.month] %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
